<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey Dashboard</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        header {
            background: linear-gradient(to right, #4e73df, #224abe);
            color: #fff;
            padding: 20px;
            text-align: center;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            margin-top: 20px;
            color: #333;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #4e73df;
            color: #fff;
        }

        tr:hover {
            background-color: #e2e8f0;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            background-color: #4e73df;
            border: 1px solid #224abe;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
        }

        .button:hover {
            background-color: #224abe;
        }

        /* Additional Styles */

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .goback-btn {
            display: block;
            margin: 20px auto;
            padding: 12px 25px;
            /* Adjusted padding for a smaller button */
            width: 150px;
            /* Fixed width for the button */
            background-color: #2ecc71;
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            text-align: center;
        }

        .goback-btn:hover {
            background-color: #27ae60;
        }
    </style>
</head>

<body>
    <header>
        <h1>Survey Dashboard</h1>
    </header>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% user.forEach(user=> { %>
                <tr class="fadeInUp">
                    <td><strong>
                            <%= user.firstname %>
                        </strong></td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.mobilenumber %>
                    </td>
                    <td><a href="/survey_response?userid=<%= user.userid %>" class="button">View Survey Response</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <a href="/admin" class="goback-btn">Go Back</a>
</body>

</html>