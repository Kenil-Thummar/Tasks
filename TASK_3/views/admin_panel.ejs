<!-- admin.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        h1 {
            color: #2c3e50;
            margin-bottom: 30px;
        }

        form {
            background-color: #ecf0f1;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            width: 300px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        form:hover {
            transform: scale(1.02);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #34495e;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #bdc3c7;
            border-radius: 4px;
            transition: border-color 0.3s ease-in-out;
        }

        input:focus {
            border-color: #3498db;
        }

        button {
            background-color: #2ecc71;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        button:hover {
            background-color: #27ae60;
        }

        a {
            text-decoration: none;
            color: #2c3e50;
            margin-right: 10px;
        }

        a:hover {
            text-decoration: underline;
        }

        button,
        a button {
            margin-top: 10px;
            transition: transform 0.3s ease-in-out;
        }

        button:hover,
        a button:hover {
            transform: scale(1.05);
        }
    </style>
</head>

<body>
    <% if (locals.alertMessage) { %>
        <script>
            alert('<%= alertMessage %>');
        </script>
        <% } %>
            <h1 class="animate__animated animate__fadeInDown">Admin Panel</h1>

            <!-- Add Question Form -->
            <form action="/admin_panel" method="post" class="animate__animated animate__fadeIn">
                <label for="question">Question:</label>
                <input type="text" id="question" name="question" required>

                <label for="options">Options (comma-separated):</label>
                <input type="text" id="options" name="options" required>

                <label for="correctAnswer">Correct Answer:</label>
                <input type="text" id="correctAnswer" name="correctAnswer" required>

                <button type="submit">Add Question</button>
            </form>

            <!-- View Results Button -->
            <a href="/viewUsersResult" class="animate__animated animate__fadeIn">
                <button>View Results</button>
            </a>

            <!-- Logout Button -->
            <a href="/" class="animate__animated animate__fadeIn">
                <button>Logout</button>
            </a>
</body>

</html>